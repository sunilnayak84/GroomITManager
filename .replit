
modules = ["nodejs-20:v8-20230920-bd784b9", "web:v2-20230623-0b7a606"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "cloudrun"
build = ["npm", "run", "build"]
run = ["sh", "-c", "npm run dev"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5174
externalPort = 80

[env]
PORT = "3000"
VITE_PORT = "5174"

[[hints]]
regex = "Error: "
allowIn = ["DevLogs"]
command = "npm run dev"
name = "Error"

[processes]
dev = "npm run dev"

[workflow]
defaultTask = "dev"

[[workflow.tasks]]
name = "dev"
command = "concurrently \"cd server && tsx watch --clear-screen=false index.ts\" \"cd client && npm run dev\""
