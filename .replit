modules = ["web", "nodejs-20"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "cloudrun"
build = ["npm", "run", "build"]
run = ["sh", "-c", "cd server && tsx watch --clear-screen=false index.ts"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5174
externalPort = 80

[env]
PORT = "3000"
VITE_PORT = "5174"

[[hints]]
regex = "Error: "
allowIn = ["DevLogs"]
command = "npm run dev"
name = "Error"

[processes]
dev = "npm run dev"

[workflow]
defaultTask = "dev"

[[workflow.tasks]]
name = "dev"
command = "concurrently \"cd server && tsx watch --clear-screen=false index.ts\" \"cd client && npm run dev\""

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Server"

[[workflows.workflow]]
name = "Backend Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && tsx watch --clear-screen=false index.ts"
waitForPort = 3000

[[workflows.workflow]]
name = "Frontend Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && VITE_SERVER_PORT=3000 vite --host 0.0.0.0 --port 5174"
waitForPort = 5174
