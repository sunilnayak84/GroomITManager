modules = ["nodejs-20", "web", "postgresql-16"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "cloudrun"
build = ["npm", "run", "build"]
run = ["sh", "-c", "npm run dev"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development PORT=3000 tsx --require dotenv/config server/index.ts"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Cleanup PostgreSQL"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Full Stack Dev"

[[workflows.workflow]]
name = "Project"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsx --require dotenv/config server/index.ts"
waitForPort = 5173

[[workflows.workflow]]
name = "Cleanup PostgreSQL"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf migrations && rm -rf db/schema.ts && rm drizzle.config.ts"

[[workflows.workflow]]
name = "Full Stack Dev"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "concurrently \"cd server && tsx watch --clear-screen=false index.ts\" \"cd client && npm run dev -- --port 5174\""
waitForPort = 5174

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5173
externalPort = 5173

[[ports]]
localPort = 5174
externalPort = 80

[[ports]]
localPort = 5175
externalPort = 3002
